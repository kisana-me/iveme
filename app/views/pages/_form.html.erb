<%= form_with(model: page, url: url, class: "ctmf", data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: page %>

  <div>
    <%= form.label :name_id %>
    <%= form.text_field :name_id %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :visibility, style: "display: block" %>
    <%= form.select :visibility, Document.visibilities.keys.map { |k| [t("activerecord.enums.document.visibility.#{k}"), k] }, {} %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Document.statuses.keys.map { |k| [t("activerecord.enums.document.status.#{k}"), k] }, {} %>
  </div>

  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
